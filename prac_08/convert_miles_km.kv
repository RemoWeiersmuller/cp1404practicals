BoxLayout:
    orientation: 'vertical'
#    orientation: 'horizontal'
    BoxLayout:
        orientation: 'horizontal'
        TextInput:
            id: user_input
            text: app.user_value
            font_size: 45
            multiline: False
            # This event is when the user enters text (and presses Enter)
            on_text: app.handle_update()
        BoxLayout:
            orientation: 'vertical'
            size_hint_x: 0.2
            Button:
                id: up_button
                text: 'Up'
                on_press: app.handle_increment(1)
            Button:
                id: down_button
                text: 'Down'
                on_press: app.handle_increment(-1)
#    Button:
#        text: 'Convert miles to km'
#        on_press: app.handle_update()
    Label:
        id: output_label
        text: app.result
        font_size: 45
        color: (1, 1, 0, 1)